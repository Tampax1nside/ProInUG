<div class="container" style="max-width: 600px;">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center text-dark mt-5">Login Form</h2>
            <div class="card" >
                <h5 class="text-center text-danger mt-5" hidden="@isErrorMessageHidden()">@LoginResultMessage</h5>
                <EditForm Model="credentials" OnValidSubmit="@(() => OnSubmitCallback.InvokeAsync(credentials))"
                          class="card-body">
                    <DataAnnotationsValidator />
                    <div class="mb-3">
                        <InputText id="username" class="form-control" placeholder="Username"
                                   @bind-Value="credentials.Username" />
                        <ValidationMessage For="@(() => credentials.Username)" />
                    </div>
                    <div class="mb-3">
                        <InputText id="password" class="form-control" type="password" placeholder="Confirm password"
                                   @bind-Value="credentials.Password" />
                        <ValidationMessage For="@(() => credentials.Password)" />
                    </div>
                    <div class="text-center">
                        <input type="submit" value="Submit" class="btn btn-primary px-5 mb-5 w-100" 
                               disabled="@IsSubmitButtonDisabled"/>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>