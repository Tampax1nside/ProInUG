<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.DeleteForever" Class="mr-3 mb-n1" />
            Delete Payment Point?
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField Value="@paymentPoint.Id.ToString()" Label="Payment point ID" ReadOnly="true" />
        <MudTextField Value="@paymentPoint.DeviceUri" Label="Device Url" ReadOnly="true" />
        <MudTextField Value="@paymentPoint.OperatorName" Label="Operator Name" ReadOnly="true" />
        <MudTextField Value="@paymentPoint.IsEnable" Label="Is Enable" ReadOnly="true" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="DeletePaymentPoint">Delete Payment Point</MudButton>
    </DialogActions>
</MudDialog>